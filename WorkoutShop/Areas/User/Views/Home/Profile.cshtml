@model WorkoutShop.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-page {
        background: #f8f9fa;
        padding: 40px 0;
        min-height: calc(100vh - 200px);
    }
    
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0 80px;
        margin-bottom: -60px;
        border-radius: 0 0 20px 20px;
    }
    
    .profile-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }
    
    .profile-sidebar {
        background: #f8fafc;
        padding: 30px;
        border-right: 1px solid #e2e8f0;
    }
    
    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 5px solid white;
        box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        object-fit: cover;
        margin: 0 auto;
        display: block;
    }
    
    .profile-name {
        text-align: center;
        margin-top: 20px;
    }
    
    .profile-name h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 5px;
    }
    
    .profile-name p {
        color: #64748b;
        font-size: 0.95rem;
    }
    
    .profile-stats {
        display: flex;
        justify-content: space-around;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 1px solid #e2e8f0;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-item .number {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2563eb;
    }
    
    .stat-item .label {
        font-size: 0.85rem;
        color: #64748b;
        margin-top: 5px;
    }
    
    .profile-menu {
        list-style: none;
        padding: 0;
        margin-top: 30px;
    }
    
    .profile-menu li {
        margin-bottom: 5px;
    }
    
    .profile-menu a {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        color: #475569;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.2s ease;
    }
    
    .profile-menu a:hover, .profile-menu a.active {
        background: white;
        color: #2563eb;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .profile-menu a i {
        margin-right: 12px;
        font-size: 1.1rem;
    }
    
    .profile-content {
        padding: 40px;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e2e8f0;
    }
    
    .info-group {
        margin-bottom: 25px;
    }
    
    .info-group label {
        display: block;
        font-weight: 600;
        color: #475569;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }
    
    .info-group .form-control {
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }
    
    .info-group .form-control:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        outline: none;
    }
    
    .info-group .form-control:disabled {
        background: #f1f5f9;
        color: #64748b;
    }
    
    .info-display {
        padding: 12px 15px;
        background: #f8fafc;
        border-radius: 8px;
        color: #1e293b;
        border: 1px solid #e2e8f0;
    }
    
    .btn-edit-profile {
        background: #2563eb;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s ease;
    }
    
    .btn-edit-profile:hover {
        background: #1d4ed8;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
    }
    
    .btn-cancel {
        background: white;
        color: #64748b;
        border: 1px solid #cbd5e1;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s ease;
    }
    
    .btn-cancel:hover {
        background: #f8fafc;
        border-color: #94a3b8;
    }
    
    .badge-verified {
        background: #dcfce7;
        color: #16a34a;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-left: 10px;
    }
    
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }
    
    .action-card {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 25px;
        text-align: center;
        transition: all 0.2s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }
    
    .action-card:hover {
        border-color: #2563eb;
        box-shadow: 0 8px 20px rgba(37, 99, 235, 0.15);
        transform: translateY(-3px);
    }
    
    .action-card i {
        font-size: 2.5rem;
        color: #2563eb;
        margin-bottom: 15px;
    }
    
    .action-card h5 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 8px;
    }
    
    .action-card p {
        font-size: 0.85rem;
        color: #64748b;
        margin: 0;
    }
    
    .member-since {
        background: #eff6ff;
        border-left: 4px solid #2563eb;
        padding: 15px 20px;
        border-radius: 8px;
        margin-top: 30px;
    }
    
    .member-since i {
        color: #2563eb;
        margin-right: 10px;
    }
</style>

<div class="profile-page">
    <!-- Header -->
    <div class="profile-header">
        <div class="container">
            <h1 class="text-center mb-2">
                <i class="bi bi-person-circle me-2"></i>My Profile
            </h1>
            <p class="text-center mb-0 opacity-75">Manage your account settings and preferences</p>
        </div>
    </div>

    <div class="container">
        <div class="profile-card">
            <div class="row g-0">
                <!-- Sidebar -->
                <div class="col-lg-3">
                    <div class="profile-sidebar">
                        <!-- Avatar -->
                        <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "https://ui-avatars.com/api/?name=" + Model.FirstName + "+" + Model.LastName + "&size=150&background=667eea&color=fff")" 
                             alt="Profile" 
                             class="profile-avatar">
                        
                        <!-- Name -->
                        <div class="profile-name">
                            <h3>@Model.FirstName @Model.LastName</h3>
                            <p>@Model.Email</p>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge-verified">
                                    <i class="bi bi-patch-check-fill"></i> Verified
                                </span>
                            }
                        </div>
                        
                        <!-- Stats -->
                        <div class="profile-stats">
                            <div class="stat-item">
                                <div class="number">0</div>
                                <div class="label">Orders</div>
                            </div>
                            <div class="stat-item">
                                <div class="number">0</div>
                                <div class="label">Reviews</div>
                            </div>
                        </div>
                        
                        <!-- Menu -->
                        <ul class="profile-menu">
                            <li>
                                <a href="#" class="active">
                                    <i class="bi bi-person"></i>
                                    Profile Info
                                </a>
                            </li>
                            <li>
                                <a asp-area="User" asp-controller="Order" asp-action="Index">
                                    <i class="bi bi-bag"></i>
                                    My Orders
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="Wishlist">
                                    <i class="bi bi-heart"></i>
                                    Wishlist
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-bell"></i>
                                    Notifications
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-shield-lock"></i>
                                    Security
                                </a>
                            </li>
                        </ul>
                        
                        <!-- Member Since -->
                        <div class="member-since">
                            <i class="bi bi-calendar-check"></i>
                            <strong>Member since</strong>
                            <div class="text-muted small mt-1">@Model.CreatedAt.ToString("MMMM yyyy")</div>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <div class="profile-content">
                        <h2 class="section-title">
                            <i class="bi bi-pencil-square me-2"></i>Personal Information
                        </h2>
                        
                        <form id="profileForm">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" id="firstName" value="@Model.FirstName" disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" id="lastName" value="@Model.LastName" disabled>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <label>Email Address</label>
                                        <input type="email" class="form-control" value="@Model.Email" disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <label>Phone Number</label>
                                        <input type="tel" class="form-control" id="phoneNumber" value="@Model.PhoneNumber" disabled>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="info-group">
                                <label>Address</label>
                                <input type="text" class="form-control" id="address" value="@Model.Address" disabled>
                            </div>
                            
                            <div class="d-flex gap-3 mt-4">
                                <button type="button" class="btn btn-edit-profile" id="editBtn" onclick="enableEdit()">
                                    <i class="bi bi-pencil me-2"></i>Edit Profile
                                </button>
                                <button type="button" class="btn btn-edit-profile d-none" id="saveBtn" onclick="saveProfile()">
                                    <i class="bi bi-check-circle me-2"></i>Save Changes
                                </button>
                                <button type="button" class="btn btn-cancel d-none" id="cancelBtn" onclick="cancelEdit()">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </button>
                            </div>
                        </form>
                        
                        <!-- Quick Actions -->
                        <h2 class="section-title mt-5">
                            <i class="bi bi-lightning me-2"></i>Quick Actions
                        </h2>
                        
                        <div class="quick-actions">
                            <a asp-area="User" asp-controller="Order" asp-action="Index" class="action-card">
                                <i class="bi bi-bag-check"></i>
                                <h5>My Orders</h5>
                                <p>View and track your orders</p>
                            </a>
                            
                            <a asp-controller="Home" asp-action="Wishlist" class="action-card">
                                <i class="bi bi-heart"></i>
                                <h5>Wishlist</h5>
                                <p>View saved products</p>
                            </a>
                            
                            <a asp-controller="Cart" asp-action="Index" class="action-card">
                                <i class="bi bi-cart"></i>
                                <h5>Shopping Cart</h5>
                                <p>Review items in cart</p>
                            </a>
                            
                            <div class="action-card" onclick="alert('Feature coming soon!')">
                                <i class="bi bi-star"></i>
                                <h5>Reviews</h5>
                                <p>Manage your reviews</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let originalValues = {};
        
        function enableEdit() {
            // Store original values
            originalValues = {
                firstName: $('#firstName').val(),
                lastName: $('#lastName').val(),
                phoneNumber: $('#phoneNumber').val(),
                address: $('#address').val()
            };
            
            // Enable inputs
            $('#firstName, #lastName, #phoneNumber, #address').prop('disabled', false);
            
            // Toggle buttons
            $('#editBtn').addClass('d-none');
            $('#saveBtn, #cancelBtn').removeClass('d-none');
        }
        
        function cancelEdit() {
            // Restore original values
            $('#firstName').val(originalValues.firstName);
            $('#lastName').val(originalValues.lastName);
            $('#phoneNumber').val(originalValues.phoneNumber);
            $('#address').val(originalValues.address);
            
            // Disable inputs
            $('#firstName, #lastName, #phoneNumber, #address').prop('disabled', true);
            
            // Toggle buttons
            $('#saveBtn, #cancelBtn').addClass('d-none');
            $('#editBtn').removeClass('d-none');
        }
        
        function saveProfile() {
            var data = {
                firstName: $('#firstName').val(),
                lastName: $('#lastName').val(),
                phoneNumber: $('#phoneNumber').val(),
                address: $('#address').val()
            };
            
            $.ajax({
                url: '@Url.Action("UpdateProfile", "Home", new { area = "User" })',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            timer: 2000,
                            showConfirmButton: false
                        });
                        
                        // Update profile name in sidebar
                        $('.profile-name h3').text(data.firstName + ' ' + data.lastName);
                        
                        // Disable inputs
                        $('#firstName, #lastName, #phoneNumber, #address').prop('disabled', true);
                        
                        // Toggle buttons
                        $('#saveBtn, #cancelBtn').addClass('d-none');
                        $('#editBtn').removeClass('d-none');
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to update profile. Please try again.'
                    });
                }
            });
        }
    </script>
}
