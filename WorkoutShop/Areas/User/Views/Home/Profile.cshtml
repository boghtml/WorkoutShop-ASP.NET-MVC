@model WorkoutShop.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-page {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 40px 0;
    }
    
    .profile-container {
        max-width: 1400px;
        margin: 0 auto;
    }
    
    .profile-header-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        position: relative;
        overflow: hidden;
    }
    
    .profile-header-card::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-radius: 50%;
        transform: translate(50%, -50%);
    }
    
    .profile-top {
        display: flex;
        align-items: center;
        gap: 30px;
        position: relative;
        z-index: 1;
    }
    
    .avatar-wrapper {
        position: relative;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 20px;
        border: 4px solid white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        object-fit: cover;
    }
    
    .avatar-badge {
        position: absolute;
        bottom: -5px;
        right: -5px;
        width: 35px;
        height: 35px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: 3px solid white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.9rem;
    }
    
    .profile-info {
        flex: 1;
    }
    
    .profile-info h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 8px;
    }
    
    .profile-info .email {
        color: #64748b;
        font-size: 1rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .badge-verified {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }
    
    .profile-stats-inline {
        display: flex;
        gap: 30px;
        margin-top: 15px;
    }
    
    .stat-inline {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .stat-inline i {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.1rem;
    }
    
    .stat-inline .stat-info .number {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        line-height: 1;
    }
    
    .stat-inline .stat-info .label {
        font-size: 0.8rem;
        color: #64748b;
    }
    
    .profile-actions-header {
        display: flex;
        gap: 10px;
    }
    
    .btn-header {
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-primary-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .btn-primary-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }
    
    .btn-outline-custom {
        background: white;
        border: 2px solid #e2e8f0;
        color: #64748b;
    }
    
    .btn-outline-custom:hover {
        border-color: #cbd5e1;
        background: #f8fafc;
    }
    
    .content-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 30px;
    }
    
    .sidebar-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        height: fit-content;
    }
    
    .sidebar-section {
        margin-bottom: 30px;
    }
    
    .sidebar-section:last-child {
        margin-bottom: 0;
    }
    
    .sidebar-title {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #94a3b8;
        margin-bottom: 15px;
    }
    
    .nav-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .nav-menu li {
        margin-bottom: 5px;
    }
    
    .nav-menu a {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        color: #475569;
        text-decoration: none;
        border-radius: 12px;
        transition: all 0.2s ease;
        font-weight: 500;
        position: relative;
    }
    
    .nav-menu a:hover {
        background: #f8fafc;
        color: #667eea;
        padding-left: 20px;
    }
    
    .nav-menu a.active {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        color: #667eea;
        font-weight: 600;
    }
    
    .nav-menu a.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 60%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 0 4px 4px 0;
    }
    
    .nav-menu a i {
        font-size: 1.1rem;
    }
    
    .progress-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
        border-radius: 15px;
        color: white;
        margin-top: 20px;
    }
    
    .progress-card h4 {
        font-size: 0.9rem;
        margin-bottom: 10px;
        opacity: 0.9;
    }
    
    .progress-card .progress-value {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .progress-card .progress-bar-custom {
        height: 8px;
        background: rgba(255,255,255,0.3);
        border-radius: 10px;
        overflow: hidden;
    }
    
    .progress-bar-custom .fill {
        height: 100%;
        background: white;
        border-radius: 10px;
        transition: width 0.3s ease;
    }
    
    .main-content-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f1f5f9;
    }
    
    .section-header h2 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .section-header h2 i {
        color: #667eea;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }
    
    .form-grid.single {
        grid-template-columns: 1fr;
    }
    
    .form-field {
        position: relative;
    }
    
    .form-field label {
        display: block;
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }
    
    .form-field .input-wrapper {
        position: relative;
    }
    
    .form-field .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 1rem;
    }
    
    .form-field input {
        width: 100%;
        padding: 14px 15px 14px 45px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        background: white;
    }
    
    .form-field input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        outline: none;
    }
    
    .form-field input:disabled {
        background: #f8fafc;
        color: #64748b;
        cursor: not-allowed;
    }
    
    .btn-group-custom {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #f1f5f9;
    }
    
    .btn-custom {
        padding: 14px 30px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }
    
    .btn-save {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }
    
    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }
    
    .btn-cancel {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
    }
    
    .btn-cancel:hover {
        background: #f8fafc;
        border-color: #cbd5e1;
    }
    
    .info-cards-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 30px;
    }
    
    .info-mini-card {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 25px;
        border-radius: 15px;
        border: 2px solid #e2e8f0;
        transition: all 0.2s ease;
        text-align: center;
    }
    
    .info-mini-card:hover {
        border-color: #667eea;
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.15);
    }
    
    .info-mini-card i {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
        margin: 0 auto 15px;
    }
    
    .info-mini-card h5 {
        font-size: 1rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 5px;
    }
    
    .info-mini-card p {
        font-size: 0.85rem;
        color: #64748b;
        margin: 0;
    }
    
    .alert-custom {
        padding: 15px 20px;
        border-radius: 12px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .alert-info {
        background: #eff6ff;
        border-left: 4px solid #3b82f6;
        color: #1e40af;
    }
    
    .alert-info i {
        font-size: 1.5rem;
    }
</style>

<div class="profile-page">
    <div class="container profile-container">
        <!-- Profile Header Card -->
        <div class="profile-header-card">
            <div class="profile-top">
                <div class="avatar-wrapper">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "https://ui-avatars.com/api/?name=" + Model.FirstName + "+" + Model.LastName + "&size=120&background=667eea&color=fff&rounded=true")" 
                         alt="Profile" 
                         class="profile-avatar">
                    @if (Model.EmailConfirmed)
                    {
                        <div class="avatar-badge">
                            <i class="bi bi-check-lg"></i>
                        </div>
                    }
                </div>
                
                <div class="profile-info">
                    <h1>@Model.FirstName @Model.LastName</h1>
                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        @Model.Email
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge-verified">
                                <i class="bi bi-patch-check-fill"></i>
                                Verified
                            </span>
                        }
                    </div>
                    
                    <div class="profile-stats-inline">
                        <div class="stat-inline">
                            <i class="bi bi-bag-check"></i>
                            <div class="stat-info">
                                <div class="number">0</div>
                                <div class="label">Orders</div>
                            </div>
                        </div>
                        <div class="stat-inline">
                            <i class="bi bi-heart"></i>
                            <div class="stat-info">
                                <div class="number" id="wishlistCountProfile">0</div>
                                <div class="label">Wishlist</div>
                            </div>
                        </div>
                        <div class="stat-inline">
                            <i class="bi bi-star"></i>
                            <div class="stat-info">
                                <div class="number">0</div>
                                <div class="label">Reviews</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="profile-actions-header ms-auto">
                    <button class="btn-header btn-outline-custom" onclick="window.print()">
                        <i class="bi bi-printer"></i>
                        Print
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn-header btn-primary-gradient">
                        <i class="bi bi-shop"></i>
                        Shop Now
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Content Grid -->
        <div class="content-grid">
            <!-- Sidebar -->
            <div class="sidebar-card">
                <div class="sidebar-section">
                    <div class="sidebar-title">Navigation</div>
                    <ul class="nav-menu">
                        <li>
                            <a href="#" class="active">
                                <i class="bi bi-person-circle"></i>
                                <span>Profile Info</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="User" asp-controller="Order" asp-action="Index">
                                <i class="bi bi-bag-check"></i>
                                <span>My Orders</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Wishlist" asp-area="">
                                <i class="bi bi-heart"></i>
                                <span>Wishlist</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Compare" asp-area="">
                                <i class="bi bi-arrow-left-right"></i>
                                <span>Compare</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Cart" asp-action="Index" asp-area="">
                                <i class="bi bi-cart"></i>
                                <span>Shopping Cart</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div class="sidebar-section">
                    <div class="sidebar-title">Settings</div>
                    <ul class="nav-menu">
                        <li>
                            <a href="#">
                                <i class="bi bi-bell"></i>
                                <span>Notifications</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-shield-lock"></i>
                                <span>Security</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-gear"></i>
                                <span>Preferences</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div class="progress-card">
                    <h4><i class="bi bi-trophy me-2"></i>Profile Completion</h4>
                    <div class="progress-value">75%</div>
                    <div class="progress-bar-custom">
                        <div class="fill" style="width: 75%"></div>
                    </div>
                    <p class="mt-2 mb-0 small opacity-90">
                        Complete your profile to unlock benefits!
                    </p>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="main-content-card">
                <div class="alert-custom alert-info">
                    <i class="bi bi-info-circle"></i>
                    <div>
                        <strong>Member since @Model.CreatedAt.ToString("MMMM yyyy")</strong>
                        <p class="mb-0 small">Thank you for being a valued customer!</p>
                    </div>
                </div>
                
                <div class="section-header">
                    <h2>
                        <i class="bi bi-person-badge"></i>
                        Personal Information
                    </h2>
                </div>
                
                <form id="profileForm">
                    <div class="form-grid">
                        <div class="form-field">
                            <label>First Name</label>
                            <div class="input-wrapper">
                                <i class="bi bi-person input-icon"></i>
                                <input type="text" id="firstName" value="@Model.FirstName" disabled>
                            </div>
                        </div>
                        
                        <div class="form-field">
                            <label>Last Name</label>
                            <div class="input-wrapper">
                                <i class="bi bi-person input-icon"></i>
                                <input type="text" id="lastName" value="@Model.LastName" disabled>
                            </div>
                        </div>
                        
                        <div class="form-field">
                            <label>Email Address</label>
                            <div class="input-wrapper">
                                <i class="bi bi-envelope input-icon"></i>
                                <input type="email" value="@Model.Email" disabled>
                            </div>
                        </div>
                        
                        <div class="form-field">
                            <label>Phone Number</label>
                            <div class="input-wrapper">
                                <i class="bi bi-telephone input-icon"></i>
                                <input type="tel" id="phoneNumber" value="@Model.PhoneNumber" disabled>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-grid single mt-3">
                        <div class="form-field">
                            <label>Address</label>
                            <div class="input-wrapper">
                                <i class="bi bi-geo-alt input-icon"></i>
                                <input type="text" id="address" value="@Model.Address" disabled>
                            </div>
                        </div>
                    </div>
                    
                    <div class="btn-group-custom">
                        <button type="button" class="btn-custom btn-edit" id="editBtn" onclick="enableEdit()">
                            <i class="bi bi-pencil-square"></i>
                            Edit Profile
                        </button>
                        <button type="button" class="btn-custom btn-save d-none" id="saveBtn" onclick="saveProfile()">
                            <i class="bi bi-check-circle"></i>
                            Save Changes
                        </button>
                        <button type="button" class="btn-custom btn-cancel d-none" id="cancelBtn" onclick="cancelEdit()">
                            <i class="bi bi-x-circle"></i>
                            Cancel
                        </button>
                    </div>
                </form>
                
                <!-- Info Cards -->
                <div class="section-header mt-5">
                    <h2>
                        <i class="bi bi-speedometer2"></i>
                        Quick Access
                    </h2>
                </div>
                
                <div class="info-cards-grid">
                    <a asp-area="User" asp-controller="Order" asp-action="Index" class="info-mini-card" style="text-decoration: none;">
                        <i class="bi bi-bag-check"></i>
                        <h5>My Orders</h5>
                        <p>Track your orders</p>
                    </a>
                    
                    <a asp-controller="Home" asp-action="Wishlist" asp-area="" class="info-mini-card" style="text-decoration: none;">
                        <i class="bi bi-heart"></i>
                        <h5>Wishlist</h5>
                        <p>Saved products</p>
                    </a>
                    
                    <a asp-controller="Cart" asp-action="Index" asp-area="" class="info-mini-card" style="text-decoration: none;">
                        <i class="bi bi-cart"></i>
                        <h5>Shopping Cart</h5>
                        <p>View cart items</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let originalValues = {};
        
        $(document).ready(function() {
            // Update wishlist count
            var wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            $('#wishlistCountProfile').text(wishlist.length);
            
            // Listen for wishlist changes
            $(document).on('wishlistUpdated', function() {
                var wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
                $('#wishlistCountProfile').text(wishlist.length);
            });
        });
        
        function enableEdit() {
            // Store original values
            originalValues = {
                firstName: $('#firstName').val(),
                lastName: $('#lastName').val(),
                phoneNumber: $('#phoneNumber').val(),
                address: $('#address').val()
            };
            
            // Enable inputs
            $('#firstName, #lastName, #phoneNumber, #address').prop('disabled', false);
            $('#firstName, #lastName, #phoneNumber, #address').css({
                'background': 'white',
                'border-color': '#667eea'
            });
            
            // Toggle buttons
            $('#editBtn').addClass('d-none');
            $('#saveBtn, #cancelBtn').removeClass('d-none');
            
            // Focus first input
            $('#firstName').focus();
        }
        
        function cancelEdit() {
            // Restore original values
            $('#firstName').val(originalValues.firstName);
            $('#lastName').val(originalValues.lastName);
            $('#phoneNumber').val(originalValues.phoneNumber);
            $('#address').val(originalValues.address);
            
            // Disable inputs
            $('#firstName, #lastName, #phoneNumber, #address').prop('disabled', true);
            $('#firstName, #lastName, #phoneNumber, #address').css({
                'background': '#f8fafc',
                'border-color': '#e2e8f0'
            });
            
            // Toggle buttons
            $('#saveBtn, #cancelBtn').addClass('d-none');
            $('#editBtn').removeClass('d-none');
        }
        
        function saveProfile() {
            // Validate inputs
            var firstName = $('#firstName').val().trim();
            var lastName = $('#lastName').val().trim();
            
            if (!firstName || !lastName) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Validation Error',
                    text: 'First name and last name are required!',
                    confirmButtonColor: '#667eea'
                });
                return;
            }
            
            var data = {
                firstName: firstName,
                lastName: lastName,
                phoneNumber: $('#phoneNumber').val(),
                address: $('#address').val()
            };
            
            // Show loading
            Swal.fire({
                title: 'Updating...',
                text: 'Please wait',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            $.ajax({
                url: '@Url.Action("UpdateProfile", "Home", new { area = "User" })',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            timer: 2000,
                            showConfirmButton: false,
                            confirmButtonColor: '#10b981'
                        });
                        
                        // Update profile name in header
                        $('.profile-info h1').text(data.firstName + ' ' + data.lastName);
                        
                        // Disable inputs
                        $('#firstName, #lastName, #phoneNumber, #address').prop('disabled', true);
                        $('#firstName, #lastName, #phoneNumber, #address').css({
                            'background': '#f8fafc',
                            'border-color': '#e2e8f0'
                        });
                        
                        // Toggle buttons
                        $('#saveBtn, #cancelBtn').addClass('d-none');
                        $('#editBtn').removeClass('d-none');
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                            confirmButtonColor: '#ef4444'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to update profile. Please try again.',
                        confirmButtonColor: '#ef4444'
                    });
                }
            });
        }
    </script>
