@{
    ViewData["Title"] = "Test Localization";
}

<div class="container mt-5">
    <h1>Localization Test Page</h1>

    <div class="alert alert-info mt-3">
        <strong>Current UI Culture:</strong> @ViewBag.CurrentCulture
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>Resource Tests</h3>
        </div>
        <div class="card-body">
            <p><strong>Home:</strong> @ViewBag.HomeText</p>
            <p><strong>Products:</strong> @ViewBag.ProductsText</p>
            <p><strong>Cart:</strong> @ViewBag.CartText</p>
            <hr />
            <p><strong>Direct Localizer["Home"]:</strong> @Localizer["Home"]</p>
        </div>
    </div>

    <div class="mt-4">
        <h4>Switch language (query string):</h4>
        <a class="btn btn-primary" href="/TestLocalization?culture=en&ui-culture=en">English</a>
        <a class="btn btn-success ms-2" href="/TestLocalization?culture=uk&ui-culture=uk">Українська</a>
    </div>

    <div class="mt-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
