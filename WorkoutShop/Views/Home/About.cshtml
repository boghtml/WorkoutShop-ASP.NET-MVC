@{
    ViewData["Title"] = "About Us";
}

<div class="about-page">
    <!-- Hero Section -->
    <section class="hero-section text-white text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <h1 class="display-3 fw-bold mb-3">About WorkoutShop</h1>
            <p class="lead mb-0">Your trusted partner in fitness and wellness journey</p>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h2 class="fw-bold mb-4">Our Mission</h2>
                    <p class="text-muted mb-3">
                        At WorkoutShop, we believe that everyone deserves access to quality fitness equipment and supplements 
                        that help them achieve their health and wellness goals.
                    </p>
                    <p class="text-muted mb-3">
                        We're committed to providing top-tier products, expert guidance, and exceptional customer service 
                        to support you every step of the way on your fitness journey.
                    </p>
                    <p class="text-muted">
                        Whether you're a beginner just starting out or a seasoned athlete, WorkoutShop is here to help 
                        you reach your full potential.
                    </p>
                </div>
                <div class="col-lg-6">
                    <div class="rounded-3 overflow-hidden shadow-lg">
                        <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&h=600&fit=crop" 
                             alt="Fitness gym" class="img-fluid w-100" style="height: 400px; object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">Our Core Values</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 text-center p-4">
                        <div class="mb-3">
                            <i class="bi bi-award text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Quality First</h4>
                        <p class="text-muted mb-0">
                            We carefully curate every product to ensure it meets our high standards for quality and effectiveness.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 text-center p-4">
                        <div class="mb-3">
                            <i class="bi bi-people text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Customer Focus</h4>
                        <p class="text-muted mb-0">
                            Your satisfaction is our priority. We're here to support you with personalized service and expert advice.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 text-center p-4">
                        <div class="mb-3">
                            <i class="bi bi-heart text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Wellness Passion</h4>
                        <p class="text-muted mb-0">
                            We're passionate about health and fitness, and we're dedicated to helping you live your best life.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md-3 col-6">
                    <div class="p-3">
                        <h2 class="display-4 fw-bold text-primary mb-2">1000+</h2>
                        <p class="text-muted mb-0">Products</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3">
                        <h2 class="display-4 fw-bold text-primary mb-2">50K+</h2>
                        <p class="text-muted mb-0">Happy Customers</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3">
                        <h2 class="display-4 fw-bold text-primary mb-2">5+</h2>
                        <p class="text-muted mb-0">Years Experience</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3">
                        <h2 class="display-4 fw-bold text-primary mb-2">24/7</h2>
                        <p class="text-muted mb-0">Support</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">Meet Our Team</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center mb-3" 
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="fw-bold mb-2">Alex Johnson</h5>
                            <p class="text-primary mb-3">Founder & CEO</p>
                            <p class="text-muted small mb-0">
                                Former professional athlete with 15 years of fitness industry experience.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center mb-3" 
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="fw-bold mb-2">Sarah Martinez</h5>
                            <p class="text-primary mb-3">Head Nutritionist</p>
                            <p class="text-muted small mb-0">
                                Certified nutritionist specializing in sports nutrition and wellness.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center mb-3" 
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="fw-bold mb-2">Mike Chen</h5>
                            <p class="text-primary mb-3">Customer Success Lead</p>
                            <p class="text-muted small mb-0">
                                Dedicated to ensuring every customer has an exceptional experience.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="fw-bold mb-4">Ready to Start Your Fitness Journey?</h2>
                    <p class="text-muted mb-4">
                        Join thousands of satisfied customers who trust WorkoutShop for their fitness needs.
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-cart-plus me-2"></i>Shop Now
                        </a>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary btn-lg px-4">
                            <i class="bi bi-envelope me-2"></i>Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .about-page .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .about-page .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
    
    .hero-section {
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
        background-size: cover;
        opacity: 0.3;
    }
