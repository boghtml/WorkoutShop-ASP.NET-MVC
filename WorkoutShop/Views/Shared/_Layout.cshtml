@using WorkoutShop.Services.ShoppingCartService
@using System.Security.Claims
@inject IShoppingCartService ShoppingCartService
@using WorkoutShop.Services.CategoryService
@inject ICategoryService CategoryService
@{
    var categories = await CategoryService.GetAllCategoriesAsync();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkoutShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            position: sticky;
            top: 0;
            z-index: 1030;
            transition: box-shadow 0.3s ease-in-out;
        }

        .navbar.scrolled {
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }

        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        .nav-link {
            color: #333333 !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #007bff !important;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .footer {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: #ffffff;
            padding: 60px 0 20px;
            margin-top: 60px;
            position: relative;
            z-index: 10;
        }

            .footer h5 {
                color: #ffffff;
                font-weight: 600;
                margin-bottom: 20px;
                font-size: 1.1rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .footer a {
                color: #e3e9f7;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .footer a:hover {
                    color: #ffffff;
                    padding-left: 5px;
                }

            .footer-links {
                list-style: none;
                padding: 0;
            }

                .footer-links li {
                    margin-bottom: 10px;
                }

                    .footer-links li a {
                        display: flex;
                        align-items: center;
                    }

                        .footer-links li a i {
                            margin-right: 8px;
                            width: 20px;
                        }

            .social-links a {
                display: inline-block;
                width: 40px;
                height: 40px;
                background: rgba(255,255,255,0.1);
                border-radius: 50%;
                text-align: center;
                line-height: 40px;
                margin-right: 10px;
                transition: all 0.3s ease;
            }

                .social-links a:hover {
                    background: rgba(255,255,255,0.2);
                    transform: translateY(-3px);
                    padding-left: 0;
                }

                .social-links a i {
                    font-size: 1.2rem;
                }

            .newsletter-form {
                display: flex;
                margin-top: 15px;
            }

                .newsletter-form input {
                    flex: 1;
                    padding: 10px 15px;
                    border: none;
                    border-radius: 25px 0 0 25px;
                    outline: none;
                }

                .newsletter-form button {
                    padding: 10px 25px;
                    border: none;
                    background: #007bff;
                    color: white;
                    border-radius: 0 25px 25px 0;
                    cursor: pointer;
                    transition: background 0.3s ease;
                }

                    .newsletter-form button:hover {
                        background: #0056b3;
                    }

            .footer-bottom {
                border-top: 1px solid rgba(255,255,255,0.1);
                margin-top: 40px;
                padding-top: 20px;
            }

            .footer-logo {
                font-size: 1.5rem;
                font-weight: bold;
                color: #ffffff;
                margin-bottom: 15px;
            }

            .contact-info {
                list-style: none;
                padding: 0;
            }

                .contact-info li {
                    margin-bottom: 12px;
                    display: flex;
                    align-items: center;
                }

                    .contact-info li i {
                        margin-right: 10px;
                        width: 20px;
                        color: #007bff;
                    }
    </style>

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://th.bing.com/th/id/OIP.5DpZoMomv2rQPqO6e61CwQHaHa?w=200&h=200&c=7&r=0&o=5&dpr=1.3&pid=1.7" alt="WorkoutShop Logo" class="d-inline-block align-top">
                    WorkoutShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i>About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope me-1"></i>Contact
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Wishlist">
                                <i class="bi bi-heart me-1"></i>Wishlist
                                <span class="badge bg-danger ms-1" id="wishlistCount" style="display: none;">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Compare">
                                <i class="bi bi-arrow-left-right me-1"></i>Compare
                                <span class="badge bg-info ms-1" id="compareCount" style="display: none;">0</span>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @User.Identity.Name
                                }
                                else
                                {
                                    <span>Account</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-area="User" asp-controller="Home" asp-action="Profile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-area="User" asp-controller="Order" asp-action="Index">Orders</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="User" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-area="User" asp-controller="Account" asp-action="Login">Login</a></li>
                                    <li><a class="dropdown-item" asp-area="User" asp-controller="Account" asp-action="Register">Register</a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index" id="cartIcon">
                                <i class="fas fa-shopping-cart"></i>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    var cartItemCount = await ShoppingCartService.GetCartItemCountAsync(User.FindFirstValue(ClaimTypes.NameIdentifier));
                                    if (cartItemCount > 0)
                                    {
                                        <span class="badge bg-primary" id="cartItemCount">@cartItemCount</span>
                                    }
                                }
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="flex-grow-1">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="footer-logo">
                        <i class="bi bi-lightning-charge-fill"></i> WorkoutShop
                    </div>
                    <p class="mb-3">Your trusted partner for premium workout equipment and fitness solutions.</p>
                    <ul class="contact-info">
                        <li>
                            <i class="bi bi-geo-alt-fill"></i>
                            <span>123 Fitness Street, Kyiv, Ukraine</span>
                        </li>
                        <li>
                            <i class="bi bi-telephone-fill"></i>
                            <span>+380 (44) 123-45-67</span>
                        </li>
                        <li>
                            <i class="bi bi-envelope-fill"></i>
                            <span>info@workoutshop.com</span>
                        </li>
                    </ul>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Quick Links</h5>
                    <ul class="footer-links">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-chevron-right"></i>Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About"><i class="bi bi-chevron-right"></i>About Us</a></li>
                        <li><a asp-area="" asp-controller="Product" asp-action="Index"><i class="bi bi-chevron-right"></i>Products</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact"><i class="bi bi-chevron-right"></i>Contact</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Wishlist"><i class="bi bi-chevron-right"></i>Wishlist</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Compare"><i class="bi bi-chevron-right"></i>Compare Products</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Customer Service</h5>
                    <ul class="footer-links">
                        <li><a asp-area="User" asp-controller="Home" asp-action="Profile"><i class="bi bi-chevron-right"></i>My Account</a></li>
                        <li><a asp-area="User" asp-controller="Order" asp-action="Index"><i class="bi bi-chevron-right"></i>Order History</a></li>
                        <li><a asp-controller="Cart" asp-action="Index"><i class="bi bi-chevron-right"></i>Shopping Cart</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right"></i>Shipping & Returns</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right"></i>FAQ</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right"></i>Terms & Conditions</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Newsletter</h5>
                    <p>Subscribe to get special offers, free giveaways, and updates.</p>
                    <form class="newsletter-form" id="newsletterForm">
                        <input type="email" placeholder="Your email address" required>
                        <button type="submit"><i class="bi bi-send-fill"></i></button>
                    </form>
                    <div class="social-links mt-4">
                        <a href="https://facebook.com" target="_blank" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://twitter.com" target="_blank" title="Twitter"><i class="bi bi-twitter-x"></i></a>
                        <a href="https://instagram.com" target="_blank" title="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="https://youtube.com" target="_blank" title="YouTube"><i class="bi bi-youtube"></i></a>
                        <a href="https://linkedin.com" target="_blank" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0">&copy; @DateTime.Now.Year WorkoutShop. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <span class="me-3">Made with <i class="bi bi-heart-fill text-danger"></i> in Ukraine</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Update wishlist and compare counts in header
        function updateHeaderCounts() {
            var wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            var compareList = JSON.parse(localStorage.getItem('compareList') || '[]');
            
            if (wishlist.length > 0) {
                $('#wishlistCount').text(wishlist.length).show();
            } else {
                $('#wishlistCount').hide();
            }
            
            if (compareList.length > 0) {
                $('#compareCount').text(compareList.length).show();
            } else {
                $('#compareCount').hide();
            }
        }
        
        $(document).ready(function() {
            updateHeaderCounts();
            
            // Update counts when storage changes
            window.addEventListener('storage', updateHeaderCounts);
            
            // Also update on custom events
            $(document).on('wishlistUpdated compareUpdated', updateHeaderCounts);
            
            // Add scroll effect to navbar
            $(window).on('scroll', function() {
                if ($(window).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });
            
            // Newsletter form submission
            $('#newsletterForm').on('submit', function(e) {
                e.preventDefault();
                var email = $(this).find('input[type="email"]').val();
                
                Swal.fire({
                    icon: 'success',
                    title: 'Subscribed!',
                    text: 'Thank you for subscribing to our newsletter!',
                    timer: 2000,
                    showConfirmButton: false
                });
                
                $(this).find('input[type="email"]').val('');
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>